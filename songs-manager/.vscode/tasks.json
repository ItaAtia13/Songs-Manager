{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Project",
      "type": "shell",
      "command": "npm",
      "args": ["run", "setup"],
      "group": "build"
    },
    {
      "label": "Start Development",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Docker Up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"]
    }
  ]
}